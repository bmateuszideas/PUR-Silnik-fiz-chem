{
  "name": "PUR-Silnik-fiz-chem - Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.14",
  "features": {
    "ghcr.io/devcontainers/features/poetry:1": {}
  },
  "postCreateCommand": "chmod +x ./setup_workspace.sh && ./setup_workspace.sh || true",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/PUR-Silnik-fiz-chem/.venv/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
